<p id="notice"><%= notice %></p>

<h1>Sections</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Active</th>
      <th>Position</th>
      <th>Class</th>
      <th>Order</th>
      <th>Tag</th>
      <th>Page</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.skin_template_section.type_section.name %></td>
        <td><%= section.active %></td>
        <td><%= section.position %></td>
        <td><%= section.type_class %></td>
        <td><%= section.order %></td>
        <td><%= section.tag %></td>
        <td><%= section.page.name if section.page != nil %></td>
        <td><%= link_to 'Show', section %></td>
        <td><%= link_to 'Edit', edit_section_path(section) %></td>
        <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

